@model TeknikServisYazılım.Models.LoginModel
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="m-grid m-grid--hor m-grid--root m-page" style="height:759px">
    <div class="m-grid__item m-grid__item--fluid m-grid m-grid--hor m-login m-login--signin m-login--2 m-login-2--skin-1" id="m_login" style="background-image: url(../default/assets/app/media/img//bg/bg-1.jpg);">
        <div class="m-grid__item m-grid__item--fluid m-login__wrapper">
            <div class="m-login__container">
                <div class="m-login__logo">
                    <a href="#">
                        <img src="../default/assets/app/media/img//logos/logo-1.png">
                    </a>
                </div>
                <div class="m-login__signin">
                    <div class="m-login__head">
                        <h3 class="m-login__title">
                            Kullanıcı Giriş
                        </h3>
                    </div>
                    @Html.ValidationSummary()
                    @using (Html.BeginForm("Login", "Account", null, FormMethod.Post, new { @class = "m-login__form m-form" }))
                    {
                        @Html.AntiForgeryToken()
         
                        <input type="hidden" name="returnUrl" value="@ViewBag.returnUrl" />
                        <div class="form-group m-form__group">
                            @Html.TextBoxFor(model => model.UserName, new { @class = "form-control m-input", @type = "text", @placeholder = "UserName" })
                        </div>
                        <div class="form-group m-form__group">
                            @Html.TextBoxFor(model => model.Password, new { @class = "form-control m-input m-login__form-input--last", @type = "password", @placeholder = "Password", @name = "password" })
                        </div>
                        <div class="m-login__form-action">
                            <input type="submit" value="Giriş Yap" id="m_login_signin_submit" class="btn btn-focus m-btn m-btn--pill m-btn--custom m-btn--air">
                        </div>
                    }
                </div>
                @*<div class="m-login__account">
                    <span class="m-login__account-msg">
                        YENİ KULLANI OLUŞTUR
                    </span>
                    &nbsp;&nbsp;
                    <a href="/Account/Register" id="m_login_signup" class="m-link m-link--light m-login__account-link">
                        Kaydol
                    </a>
                </div>*@
            </div>
        </div>
    </div>
</div>

