@model TeknikServisYazılım.Entity.Sellproduct

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<style>
    #labelproduct {
        font-weight: 700;
    }

    #divproduct {
        margin-left: -90px;
    }
</style>


<div class="col-md-9" style="margin-bottom:50px;margin-top:30px;margin-left:50px">
    <!--begin::Portlet-->
    <div class="m-portlet m-portlet--tab">
        <div class="m-portlet__head">
            <div class="m-portlet__head-caption">
                <div class="m-portlet__head-title">
                    <span class="m-portlet__head-icon m--hide">
                        <i class="la la-gear"></i>
                    </span>
                    <h3 class="m-portlet__head-text">
                        Ürün Satış Sayfası
                    </h3>
                </div>
            </div>
        </div>
        @using (Html.BeginForm("Sell", "ProductSell", null, FormMethod.Post, new { @class = "m-form m-form--fit m-form--label-align-right" }))
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(model => model.Id)
            @Html.HiddenFor(model => model.Stock)
            @Html.HiddenFor(model => model.SName)
            @Html.HiddenFor(model => model.SBrand)
            @Html.HiddenFor(model => model.SModel)
            @Html.HiddenFor(model => model.Description)
            @Html.HiddenFor(model => model.Price)
            <div class="m-portlet__body" style="margin-left:10px">
                <div class="form-group m-form__group m--margin-top-10">
                    <div class="alert m-alert m-alert--default" role="alert">
                        Ürün Satış Sayfası
                    </div>
                </div>

                <div class="form-group m-form__group">
                    <div class="row">
                        <div class="col-md-2">
                            <label for="exampleInputEmail1" id="labelproduct">
                                Ürün adı :
                            </label>
                        </div>
                        <div class="col-md-2" id="divproduct">
                            @Html.DisplayFor(model => model.SName, new { @class = "form-control m-input" })
                        </div>
                        <div class="col-md-2" id="labelproduct">
                            <label for="exampleInputEmail1" id="labelproduct">
                                Marka :
                            </label>
                        </div>
                        <div class="col-md-2" id="divproduct">
                            @Html.DisplayFor(model => model.SBrand, new { @class = "form-control m-input" })
                        </div>

                        <div class="col-md-2">
                            <label for="exampleInputEmail1" id="labelproduct">
                                Model :
                            </label>
                        </div>
                        <div class="col-md-2" id="divproduct">
                            @Html.DisplayFor(model => model.SModel, new { @class = "form-control m-input" })
                        </div>
                    </div>
                </div>
                <div class="form-group m-form__group">
                    <div class="row">
                        <div class="col-md-2">
                            <label for="exampleInputEmail1" id="labelproduct">
                                Fiyat :
                            </label>
                        </div>
                        <div class="col-md-2" id="divproduct">
                            @Html.DisplayFor(model => model.Price, new { @class = "form-control m-input", @type = "number" })
                        </div>
                        <div class="col-md-2">
                            <label for="exampleTextarea" id="labelproduct">
                                Açıklama
                            </label>
                        </div>
                        <div class="col-md-6" id="divproduct">
                            @Html.DisplayFor(model => model.Description, new { @class = "form-control m-input", @rows = "3", @id = "exampleTextarea" })
                        </div>
                    </div>
                </div>

                <div class="form-group m-form__group">
                    <div class="row">
                        <div class="col-md-2">
                            <label for="exampleInputEmail1" id="labelproduct">
                                Adet :
                            </label>
                        </div>
                        <div class="col-md-2" style="margin-left:-90px">
                            @Html.TextBoxFor(model => model.SNumber, new { @class = "form-control m-input", @type = "number" })
                        </div>
                    </div>

                </div>
            </div>
            <div class="m-portlet__foot m-portlet__foot--fit">
                <div class="m-form__actions">
                    <input type="submit" value="Sat" class="btn btn-primary" />
                    @Html.ActionLink("Listeye Dön", "Index")
                </div>
            </div>
        }

    </div>
    <!--end::Portlet-->
</div>




<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
