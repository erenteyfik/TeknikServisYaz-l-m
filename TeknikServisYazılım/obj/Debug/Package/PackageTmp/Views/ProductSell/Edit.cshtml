@model TeknikServisYazılım.Entity.Sellproduct

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="col-md-9" style="margin-bottom:50px;margin-top:30px;margin-left:50px">
    <!--begin::Portlet-->
    <div class="m-portlet m-portlet--tab">
        <div class="m-portlet__head">
            <div class="m-portlet__head-caption">
                <div class="m-portlet__head-title">
                    <span class="m-portlet__head-icon m--hide">
                        <i class="la la-gear"></i>
                    </span>
                    <h3 class="m-portlet__head-text">
                        Ürün Güncelle
                    </h3>
                </div>
            </div>
        </div>
        @using (Html.BeginForm("Edit", "ProductSell", null, FormMethod.Post, new { @class = "m-form m-form--fit m-form--label-align-right" }))
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(model => model.Id)
            <div class="m-portlet__body">
                <div class="form-group m-form__group m--margin-top-10">
                    <div class="alert m-alert m-alert--default" role="alert">
                        Güncelle
                    </div>
                </div>

                <div class="form-group m-form__group">
                    <div class="row">
                        <div class="col-md-2">
                            <label for="exampleInputEmail1">
                                Ürün adı :
                            </label>
                        </div>
                        <div class="col-md-2" style="margin-left:-90px">

                            @Html.TextBoxFor(model => model.SName, new { @class = "form-control m-input", @placeholer = "Ürün adı" })
                            <span class="m-form__help">
                                Ürün adı
                            </span>
                        </div>
                        <div class="col-md-2">
                            <label for="exampleInputEmail1">
                                Marka :
                            </label>
                        </div>
                        <div class="col-md-2" style="margin-left:-90px">
                            @Html.TextBoxFor(model => model.SBrand, new { @class = "form-control m-input", @placeholer = "Marka" })
                            <span class="m-form__help">
                                Marka
                            </span>
                        </div>

                        <div class="col-md-2">
                            <label for="exampleInputEmail1">
                                Model :
                            </label>
                        </div>
                        <div class="col-md-2" style="margin-left:-90px">
                            @Html.TextBoxFor(model => model.SModel, new { @class = "form-control m-input", @placeholer = "Model" })
                            <span class="m-form__help">
                                Model
                            </span>
                        </div>
                    </div>
                </div>
                <div class="form-group m-form__group">
                    <div class="row">
                        <div class="col-md-2">
                            <label for="exampleInputEmail1">
                                Stock :
                            </label>
                        </div>
                        <div class="col-md-2" style="margin-left:-90px">
                            @Html.TextBoxFor(model => model.Stock, new { @class = "form-control m-input", @type = "number", @placeholer = "Stok" })
                        </div>

                        <div class="col-md-2">
                            <label for="exampleInputEmail1">
                                Fiyat :
                            </label>
                        </div>
                        <div class="col-md-2" style="margin-left:-90px">
                            @Html.TextBoxFor(model => model.Price, new { @class = "form-control m-input", @type = "number", @placeholer = "Fiyat" })
                        </div>

                    </div>
                </div>

                <div class="form-group m-form__group">
                    <div class="row">
                        <div class="col-md-2">
                            <label for="exampleTextarea">
                                Açıklama
                            </label>
                        </div>
                        <div class="col-md-10" style="margin-left:-90px">
                            @Html.TextAreaFor(model => model.Description, new { @class = "form-control m-input", @rows = "3", @id = "exampleTextarea" })
                        </div>
                    </div>


                </div>
            </div>
            <div class="m-portlet__foot m-portlet__foot--fit">
                <div class="m-form__actions">
                    <input type="submit" value="Güncelle" class="btn btn-primary" />
                    @Html.ActionLink("Listeye Dön", "Index")
                </div>
            </div>
        }

    </div>
    <!--end::Portlet-->
</div>




<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
