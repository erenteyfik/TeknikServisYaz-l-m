@model IEnumerable<TeknikServisYazılım.Identity.ApplicationUser>
@{
    ViewBag.Title = "Kullanıcılar";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="m-grid__item m-grid__item--fluid m-wrapper">
    <div class="m-subheader ">
        <div class="d-flex align-items-center">
            <div class="mr-auto">
                <h3 class="m-subheader__title m-subheader__title--separator">
                    Kullanıcılar
                </h3>
            </div>
        </div>
    </div>
    <div class="m-content">
        <div class="m-alert m-alert--icon m-alert--air m-alert--square alert alert-dismissible m--margin-bottom-30" role="alert">
            <div class="m-alert__icon">
                <i class="flaticon-exclamation m--font-brand"></i>
            </div>
            <div class="m-alert__text">
                Bu menüden Kullanıcıları listeleyebilir, düzenleyebilir ve yeni kullanıcı ekleyebilirsiniz.
            </div>
        </div>
        <div class="m-portlet m-portlet--mobile">
            <div class="m-portlet__body">
                <!--begin: Search Form -->
                <div class="m-form m-form--label-align-right m--margin-top-20 m--margin-bottom-30">
                    <div class="row align-items-center">
                        <div class="col-xl-8 order-2 order-xl-1">
                            <div class="form-group m-form__group row align-items-center">
                                <div class="col-md-4">
                                    <div class="m-input-icon m-input-icon--left">
                                        <input type="text" class="form-control m-input" placeholder="Search..." id="generalSearch">
                                        <span class="m-input-icon__icon m-input-icon__icon--left">
                                            <span>
                                                <i class="la la-search"></i>
                                            </span>
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-xl-4 order-1 order-xl-2 m--align-right">
                            <a href="/Account/Register" class="btn btn-primary m-btn m-btn--custom m-btn--icon m-btn--air m-btn--pill">
                                <span>
                                    <i class="la la-cart-plus"></i>
                                    <span>
                                        Kullanıcı Kaydet
                                    </span>
                                </span>
                            </a>
                            <div class="m-separator m-separator--dashed d-xl-none"></div>
                        </div>
                    </div>
                </div>
                <!--end: Search Form -->
                <!--begin: Datatable -->
                <table class="m-datatable" id="html_table" width="100%">
                    <thead>
                        <tr>
                            <th title="Field #2">
                                Kullanıcı Adı
                            </th>
                            <th title="Field #3">
                                Email
                            </th>
                            <th title="Field #9">
                                Sil
                            </th>
                            <th></th>
                            <th></th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Count() == 0)
                        {
                            //herhangi bir user yoksa
                            <tr>
                                <td colspan="3" class="text-center">
                                    Kullanıcı Yok
                                </td>
                            </tr>
                        }
                        else
                        {
                            foreach (var item in Model)
                            {

                                <tr>
                                    <td>
                                        @item.UserName
                                    </td>
                                    <td>
                                        @item.Email
                                    </td>
                                  
                                    <td>
                                        @*<a href="@Url.Action("Edit","Account", new { id = item.Id })" class="btn btn-sm btn-info">*@
                                        @*<a href="" class="btn btn-sm btn-info">
                                            <i class="fa fa-edit"></i>
                                        </a>*@
                                        <a href="@Url.Action("Delete","Account", new { id= @item.Id})" class="btn btn-sm btn-danger">
                                            <i class="fa fa-trash-o"></i>
                                        </a>
                                    </td>
                                </tr>

                            }
                        }
                    </tbody>
                </table>
                <!--end: Datatable -->
            </div>
        </div>
    </div>
</div>


